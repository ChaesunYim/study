def search(let, searchstring):
    count = 0
    
    length = len(searchstring)
    i=0
    while i<length:
        if i == let:
                count+=1
        i +=1
            
    for i in searchstring:
        if i == let:
            count+=1
    
    return count
 
def main():
    
    s=input("Eenter a paragraph to search into")
    let = input("Enter a latter to search for")
    
    count= search(let, s)
            
    print("The letter s, appears", count, "times")


main ()
